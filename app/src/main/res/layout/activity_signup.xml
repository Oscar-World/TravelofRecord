<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:background="#f2f3ff">



    <!--  1 Page  -->

    <FrameLayout
        android:id="@+id/signup_frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f3ff"
        android:translationZ="10px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="gone">

            <FrameLayout
                android:id="@+id/signup_idInfo"
                android:layout_width="360dp"
                android:layout_height="120dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="20dp"
                android:background="#e7faff"
                android:translationZ="15px"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="20dp"
                    android:text="아이디는 이메일 형식을 사용해주세요 !"
                    android:textSize="18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="비밀번호 분실 시, 가입하신 이메일로 인증을 진행합니다.\n존재하는 이메일을 사용해주세요."
                    android:textSize="14dp"/>

            </FrameLayout>


        <FrameLayout
            android:id="@+id/signup_pwInfo"
            android:layout_width="360dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="-115dp"
            android:background="#e7faff"
            android:translationZ="15px"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="비밀번호는 영문자, 숫자, 특수문자를 포함하여\n8자 ~ 12자로 사용해주세요."
                android:textSize="16dp" />

        </FrameLayout>


        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="35dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="top|center" />

        <TextView
            android:id="@+id/signupStep_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginRight="-110dp"
            android:layout_gravity="top|center"
            android:text="(1/3)"
            android:textSize="25dp" />

        <ImageButton
            android:id="@+id/signupBack_Btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitXY"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="top|left"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:id="@+id/signup_idText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 (E-mail)"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="-200dp"
            android:layout_marginLeft="-92dp"/>

        <ImageButton
            android:id="@+id/signup_Idbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="135dp"
            android:layout_marginRight="-140dp"
            android:backgroundTint="#f2f3ff"
            app:srcCompat="@android:drawable/ic_menu_help" />

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-150dp"
            android:hint="example@example.com"
            android:inputType="text"
            android:maxLength="26"/>

        <TextView
            android:id="@+id/signup_pwText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 (Password)"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:layout_marginLeft="-68dp"/>

        <ImageButton
            android:id="@+id/signup_Pwbtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="-140dp"
            android:backgroundTint="#f2f3ff"
            app:srcCompat="@android:drawable/ic_menu_help" />

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="비밀번호를 입력하세요"
            android:inputType="textPassword"
            android:maxLength="12"/>

        <TextView
            android:id="@+id/signup_pwcheckText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="-100dp"/>

        <EditText
            android:id="@+id/signup_pwCheck"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:hint="비밀번호를 한번 더 입력하세요"
            android:layout_marginTop="150dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:maxLength="12"/>

        <Button
            android:id="@+id/signupNext1_button"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:text="다 음"
            android:textStyle="bold"
            android:textSize="25dp"
            android:backgroundTint="#64c9ff"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/signupNext1_Block"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:text="다 음"
            android:textStyle="bold"
            android:textSize="25dp"
            android:backgroundTint="#c6c6c6"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="40dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/id_Using"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="65dp"
            android:layout_marginTop="-120dp"
            android:text="이미 사용중인 아이디입니다."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/id_Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_marginTop="-120dp"
            android:text="이메일 형식이 올바르지 않습니다."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/id_Useable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="75dp"
            android:layout_marginTop="-120dp"
            android:text="사용가능한 아이디입니다"
            android:textSize="15dp"
            android:textColor="#00ff33"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/pw_Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="45dp"
            android:layout_marginTop="30dp"
            android:text="비밀번호 형식이 올바르지 않습니다."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/pw_Useable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:text="사용가능한 비밀번호입니다"
            android:textSize="15dp"
            android:textColor="#00ff33"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/pwCheck_Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="60dp"
            android:layout_marginTop="180dp"
            android:text="비밀번호가 일치하지 않습니다."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/pwCheck_Useable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="80dp"
            android:layout_marginTop="180dp"
            android:text="비밀번호가 일치합니다."
            android:textSize="15dp"
            android:textColor="#00ff33"
            android:visibility="invisible"/>

    </FrameLayout>


    <!--  2 Page  -->

