            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="top|center"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="50dp"
            />

        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:text="본인 확인을 위해 SMS 인증을 진행합니다.\n\n연락처는 사용자 확인 외에 어떠한 용도로도 사용되지 않습니다."
            android:textSize="13dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="60dp"
            />

        <TextView
            android:id="@+id/signup_phoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연락처 (Phone)"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="-92dp"/>

        <EditText
            android:id="@+id/signup_phone"
            android:layout_width="204dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="-58dp"
            android:hint="(-)를 빼고 숫자만 입력해주세요"
            android:textSize="14dp"
            android:inputType="number"
            android:maxLength="16"/>

        <Button
            android:id="@+id/smsSend_button"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:text="인증번호 받기"
            android:textSize="13dp"
            android:backgroundTint="#64c9ff"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="102dp"/>

        <Button
            android:id="@+id/smsSend_Block"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:text="인증번호 받기"
            android:textSize="13dp"
            android:backgroundTint="#c6c6c6"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="102dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/smsSend_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="75dp"
            android:layout_marginTop="50dp"
            android:text="인증번호를 발송했습니다."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/smsEmpty_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="65dp"
            android:layout_marginTop="50dp"
            android:text="휴대폰 번호를 입력해주세요."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/numberError_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="55dp"
            android:layout_marginTop="50dp"
            android:text="휴대폰 번호가 올바르지 않습니다."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/signup_CheckNumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증 번호"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="-120dp"/>

        <EditText
            android:id="@+id/signup_CheckNum"
            android:layout_width="204dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="-58dp"
            android:hint="인증 번호를 입력하세요"
            android:textSize="15dp"
            android:inputType="number"
            android:maxLength="6"/>

        <Button
            android:id="@+id/smsCheck_button"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:text="인증번호 확인"
            android:textSize="13dp"
            android:backgroundTint="#64c9ff"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="102dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/smsCheck_Block"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:text="인증번호 확인"
            android:textSize="13dp"
            android:backgroundTint="#c6c6c6"
            android:layout_gravity="center"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="102dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/smsTime_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="105dp"
            android:layout_marginTop="192dp"
            android:text=""
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/smsOk_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="85dp"
            android:layout_marginTop="192dp"
            android:text="인증이 완료되었습니다."
            android:textSize="15dp"
            android:textColor="#00ff33"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/smsTimeout_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="65dp"
            android:layout_marginTop="200dp"
            android:text="입력 시간이 초과되었습니다.\n인증번호를 재발급 해주세요."
            android:textSize="15dp"
            android:textColor="#ff0000"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/smsError_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:layout_marginRight="60dp"
            android:text="인증번호가 일치하지 않습니다.\n인증번호를 재발급 해주세요."
            android:textColor="#ff0000"
            android:textSize="15dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/signupNext2_button"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:text="다 음"
