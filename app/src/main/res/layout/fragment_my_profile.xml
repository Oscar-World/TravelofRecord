<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myProfile_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3ff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        >

        <FrameLayout
            android:id="@+id/homeHead_Frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="#f6feff"
            android:visibility="visible"
            >

            <TextView
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필"
                android:textSize="28dp"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                />

            <Button
                android:id="@+id/editProfileSubmit_Btn"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="완료"
                android:layout_gravity="center|end"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="#64c9ff"
                android:background="#00ff0000"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/myProfile_drawerBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="centerCrop"
                android:padding="15dp"
                android:layout_gravity="center|end"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/hamburger" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="8"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <ImageView
                    android:id="@+id/myProfile_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/user"
                    />

                <ImageView
                    android:id="@+id/myProfileEdit_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/user"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/myProfileTouchImage_Image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/touch"
                    android:visibility="gone"
                    />

            </FrameLayout>


            <TextView
                android:id="@+id/myProfile_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                >

            <EditText
                android:id="@+id/myProfile_Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="상태 메시지를 작성해 보세요"
                android:inputType="textPersonName"
                android:visibility="gone"
                android:textSize="15dp"
                android:maxLength="15"
                android:textColor="#AA000000"
                />

            <TextView
                android:id="@+id/myProfile_memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로필 수정을 통해 상태 메시지를 작성해 보세요"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#55000000"
                android:visibility="gone"
                />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#dddddd"
                android:layout_marginTop="20dp"
            />

            <LinearLayout
                android:id="@+id/myProfileSelect_Layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                >

            <Button
                android:id="@+id/myProfilePhoto_Btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="피드"
                android:textColor="#64c9ff"
                android:backgroundTint="#f6feff"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/myProfilePhoto_Block"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="피드"
                android:backgroundTint="#64c9ff"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/myProfileMap_Btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="지도"
                android:textColor="#64c9ff"
                android:backgroundTint="#f6feff"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/myProfileMap_Block"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="지도"
                android:backgroundTint="#64c9ff"
                android:visibility="gone"
                />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <include layout="@layout/myprofile_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>