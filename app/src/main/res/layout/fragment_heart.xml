<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        >

        <FrameLayout
            android:id="@+id/heartHead_Frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/main"
            android:visibility="visible"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심"
                android:textSize="24dp"
                android:layout_gravity="center|start"
                android:layout_marginLeft="15dp"
                />

            <Button
                android:id="@+id/heartPhoto_Btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:text="피드"
                android:textColor="@color/primary"
                android:backgroundTint="@color/main"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/heartPhoto_Block"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="35dp"
                android:text="피드"
                android:backgroundTint="@color/primary"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/heartMap_Btn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:text="지도"
                android:textColor="@color/primary"
                android:backgroundTint="@color/main"
                android:visibility="visible"
                />

            <Button
                android:id="@+id/heartMap_Block"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:text="지도"
                android:backgroundTint="@color/primary"
                android:visibility="gone"
                />

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/heart_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2"
            android:visibility="visible"
            />

        <FrameLayout
            android:id="@+id/heart_MapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8.2"
            android:visibility="gone"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>