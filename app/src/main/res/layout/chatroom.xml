<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/chatRoom_Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:background="@color/primary3"
    android:animateLayoutChanges="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatRoom_Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/primary"
            app:civ_border_width="2dp"
            app:civ_border_overlay="false"
            android:layout_gravity="center"
            android:src="@drawable/userfull"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="15dp"
                >

                <TextView
                    android:id="@+id/chatRoomNickname_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/chatRoomDate_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시간"
                    android:textSize="12dp"
                    android:layout_marginRight="5dp"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                >

                <TextView
                    android:id="@+id/chatRoomMessage_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textSize="14dp"
                    android:maxLength="20"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/chatRoomNotRead_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/round_text"
                    android:padding="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







</LinearLayout>