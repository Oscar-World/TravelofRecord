<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/post_LinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_profileImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_color="@color/primary"
            app:civ_border_width="2dp"
            app:civ_border_overlay="false"
            />

        <TextView
            android:id="@+id/item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/marker"
            android:scaleType="centerInside"
            android:layout_gravity="bottom"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위치"
            android:textSize="13dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="0dp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_postImage"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@color/main"
        />


    <TextView
        android:id="@+id/item_writing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="글 내용"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/item_seeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="더보기"
        android:textSize="18dp"
        android:textColor="#44000000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/item_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="접기"
        android:textSize="18dp"
        android:textColor="#44000000"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightGray"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_heart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/heart"
            android:background="@color/feed"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            />

        <ImageView
            android:id="@+id/item_heartFull"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/heartfull"
            android:background="@color/feed"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="10dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_heartNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="-5dp"
            android:text="0" />

        <ImageView
            android:id="@+id/item_comment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/comment"
            android:background="@color/none"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/item_commentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0"
            android:layout_marginLeft="5dp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/item_dateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날짜"
            android:textSize="13dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/darkGray"
        android:layout_marginVertical="10dp"
        />


</LinearLayout>